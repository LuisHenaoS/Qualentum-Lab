<VirtualHost *:{{ http_port }}>
    ServerAdmin node2master@localhost
    ServerName {{ http_host }}
    ServerAlias www.{{ http_host }}
    DocumentRoot /var/www/{{ http_host }}
    ErrorLog {{ http_host }}_error.log
    CustomLog {{ http_host }}_access.log combined

    <Directory /var/www/{{ http_host }}>
        Options -Indexes
    </Directory>

    <IfModule mod_dir.c>
        DirectoryIndex index.php
    </IfModule>

</VirtualHost>